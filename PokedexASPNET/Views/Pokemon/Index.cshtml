@model IEnumerable<PokedexASPNET.Models.Pokemon>

<br />
<div class="container-fluid row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Pokedex</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Pokemon" class="btn btn-info form-control text-white">
            Add New Pokemon
        </a>
    </div>
    <div class="container-fluid">
        <div class="row">
            @foreach (var poke in Model)
            {
                <div class="col-lg">
                    @if (poke.Caught)
                    {
                        <div class="card text-white bg-success mb-2">
                            <div class="card-header">
                                <span class="float-left">@poke.Name</span><span class="float-right"><a asp-action="Upsert" asp-route-id="@poke.Id">@poke.Pid</a></span>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">
                                    @poke.PrimaryType
                                    - @poke.SecondaryType
                                </h6>
                                <p class="card-text">
                                </p>
                                <div class="card-footer">
                                    <a asp-action="UpdateCaught" asp-route-id="@poke.Id" class="btn btn-danger btn-lg btn-block">Uncatch</a>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!poke.Caught)
                    {
                        <div class="card text-white bg-danger mb-2">
                            <div class="card-header">
                                <span class="float-left">@poke.Name</span><span class="float-right"><a asp-action="Upsert" asp-route-id="@poke.Id">@poke.Pid</a></span>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">
                                    @poke.PrimaryType
                                    - @poke.SecondaryType
                                </h6>
                                <p class="card-text">
                                </p>
                                <div class="card-footer">
                                    <a asp-action="UpdateCaught" asp-route-id="@poke.Id" class="btn btn-success btn-lg btn-block">Catch</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>


