@model PokedexASPNET.Models.Pokemon

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Edit" : "Create") Pokemon</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PrimaryType"></label>
            </div>
            <div class="col-6">
                <input asp-for="PrimaryType" class="form-control" />
                <span asp-validation-for="PrimaryType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SecondaryType"></label>
            </div>
            <div class="col-6">
                <input asp-for="SecondaryType" class="form-control" />
                <span asp-validation-for="SecondaryType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Caught"></label>
            </div>
            <div class="col-6">
                <input asp-for="Caught" class="form-control" />
                <span asp-validation-for="Caught" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EvolvesTo"></label>
            </div>
            <div class="col-6">
                <input asp-for="EvolvesTo" class="form-control" />
                <span asp-validation-for="EvolvesTo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Pid"></label>
            </div>
            <div class="col-6">
                <input asp-for="Pid" class="form-control" />
                <span asp-validation-for="Pid" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
<partial name="_ValidationScriptsPartial"/>
}
